<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:columnCount="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/sin_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary"
            android:text="sin"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/cos_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary"
            android:text="cos"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/tan_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorPrimary"
            android:text="tan"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_columnWeight="12"
            app:layout_row="0" />

        <Button
            android:id="@+id/log_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary"
            android:text="log"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/ln_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary"
            android:text="ln"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/exp_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorPrimary"
            android:text="e^x"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_columnWeight="12"
            app:layout_row="1" />

        <Button
            android:id="@+id/inv_button"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimary"
            android:text="1/x"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/sqrt_button"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimary"
            android:text="sqrt(x)"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/pie_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary"
            android:text="pie"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/pow_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:background="@color/colorPrimary"
            android:text="x^y"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/fact_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorPrimary"
            android:text="x!"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_columnWeight="12"
            app:layout_row="2" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="1dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorPrimary"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_columnWeight="12"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>